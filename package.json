{
  "name": "react-scrollbar-size",
  "private": true,
  "version": "2.1.0",
  "description": "React component to calculate the size of browser scrollbars",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:babel && npm run build:declaration && npm run build:copy-files",
    "build:babel": "babel ./src --env-name build --extensions .ts,.tsx --out-dir ./build",
    "build:copy-files": "babel-node --env-name script --extensions .ts ./scripts/copy-files.ts",
    "build:declaration": "tsc --declaration --emitDeclarationOnly --outDir ./build",
    "clean": "npm run clean:build",
    "clean:build": "rimraf build",
    "lint": "eslint . --cache && echo \"eslint: no lint errors\"",
    "lint:fix": "eslint ./src --fix",
    "prebuild": "npm run clean:build",
    "test": "npm run lint && npm run test:unit",
    "test:unit": "cross-env NODE_ENV=test mocha",
    "test:coverage": "cross-env NODE_ENV=test BABEL_ENV=coverage nyc mocha && nyc report -r lcovonly",
    "test:coverage:html": "cross-env NODE_ENV=test BABEL_ENV=coverage nyc mocha && nyc report --reporter=html",
    "typecheck": "tsc --noEmit && echo \"tsc: no typecheck errors\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/STORIS/react-scrollbar-size.git"
  },
  "keywords": [
    "react",
    "scrollbar"
  ],
  "author": "STORIS",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/STORIS/react-scrollbar-size/issues"
  },
  "homepage": "https://github.com/STORIS/react-scrollbar-size#readme",
  "engines": {
    "node": ">=12.0.0"
  },
  "peerDependencies": {
    "react": "^16.8.0"
  },
  "dependencies": {
    "lodash.debounce": "^4.0.8"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.4",
    "@babel/core": "^7.10.4",
    "@babel/node": "^7.10.4",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@types/fs-extra": "^9.0.1",
    "@types/lodash.debounce": "^4.0.6",
    "@types/node": "^14.0.22",
    "@types/react": "^16.9.42",
    "@typescript-eslint/eslint-plugin": "^3.6.0",
    "@typescript-eslint/parser": "^3.6.0",
    "eslint": "^7.4.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^23.18.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-react-hooks": "^4.0.7",
    "fs-extra": "^9.0.1",
    "prettier": "^2.0.5",
    "react": "^16.13.1",
    "rimraf": "^3.0.2",
    "typescript": "^3.9.6"
  }
}
